{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "importHelpers": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "useUnknownInCatchVariables": false
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
